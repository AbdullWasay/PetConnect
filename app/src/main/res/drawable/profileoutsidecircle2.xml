<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle 1 -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#EDEFF2" />
            <stroke
                android:width="1dp"
                android:color="#EDEFF2" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>
    <!-- CircleImageView -->
    <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
        <bitmap
            android:src="@drawable/dogprofile"
            android:gravity="center" />
    </item>
</layer-list>
